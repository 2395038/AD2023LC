<Window x:Class="BubbleTea.ShoppingCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BubbleTea"
        mc:Ignorable="d"
        Title="ShoppingCart" Height="600" Width="950">
    <Grid x:Name="myGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/图片_20231011214059.jpg"/>
        </Grid.Background>

        <Button x:Name="checkout"  Content="Check Out" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,52,39" FontSize="20" Width="140" FontFamily="Ink Free" FontWeight="Bold" Foreground="#FF3A95B3" Click="checkout_Click"/>
        <Button x:Name="delete"  Content="delete" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,237,39" FontSize="20" Width="140" FontFamily="Ink Free" FontWeight="Bold" Foreground="#FF3A95B3" Click="delete_Click"/>
        <Label x:Name="no" Content="NO." HorizontalAlignment="Left" Height="29" Margin="379,517,0,0" VerticalAlignment="Top" Width="38"/>
        <TextBox x:Name="OrderNo" HorizontalAlignment="Center" Height="29" Margin="0,517,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"/>
    </Grid>
</Window>
