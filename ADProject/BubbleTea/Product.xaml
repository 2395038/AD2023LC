        <Button x:Name="Add" Content="Add New Product"  Margin="448,143,0,0" VerticalAlignment="Top" Width="255" Height="34"/>
        <Button x:Name="Add_Copy" Content="Update  Product Info" Margin="448,200,0,0" VerticalAlignment="Top"   Width="255" Height="34"/>
        <Button x:Name="Add_Copy1" Content="Delete Product" Margin="448,271,0,0" VerticalAlignment="Top"  Width="255" Height="34"/>
        <Button x:Name="Add_Copy2" Content="Show All Product Info" Margin="448,328,0,0" VerticalAlignment="Top" Width="255" Height="34"/>

